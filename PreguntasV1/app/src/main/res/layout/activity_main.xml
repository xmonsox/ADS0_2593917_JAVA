<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:padding="30dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/seed"
        android:gravity="center"></TextView>
    <ImageView
        android:layout_marginTop="25dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@mipmap/ic_preguntas_round"
        android:layout_gravity="center"
        ></ImageView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="UserName"
        android:textSize="20sp"
        android:textColor="@color/md_theme_dark_primaryContainer"
        android:textStyle="bold">
    </TextView>
    <EditText
        android:id="@+id/campo_correo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/seed"
        android:text="andres@gmail.com"
        >
    </EditText>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Password"
        android:textSize="20sp"
        android:textColor="@color/md_theme_dark_primaryContainer"
        android:textStyle="bold">
    </TextView>
    <EditText
        android:id="@+id/campo_contrasenia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/seed"
        android:inputType="textPassword"
        android:text="12345"
        >
    </EditText>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INICIAR"
        android:textStyle="bold"
        android:layout_marginTop="18dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/md_theme_dark_primaryContainer"
        android:onClick="validarIngreso"
        ></Button>

</LinearLayout>